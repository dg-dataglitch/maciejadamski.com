# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab
indent_size = 8
max_line_length = 120

[*.sh]
indent_style = space
indent_size = 8
max_line_length = 120

[*.{js,css,jsonl}]
indent_style = space
indent_size = 8
max_line_length = 120

[*{yaml,yml,toml}]
indent_style = space
indent_size = 4

[*.{html,templ}]
indent_style = space
indent_size = 4
max_line_length = 150

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 8
